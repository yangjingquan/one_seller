<view class="renzheng">

  <view class='list'>
    <view class='list_left'>姓名:</view>
    <view class='list_right'>
      <input type="text" placeholder="请输入真实姓名 (必填)" class="inp-holder" bindinput="getTruename"  value='{{truename}}'/>
    </view>
  </view>
  
  <view class='list'>
    <view class='list_left'>手机:</view>
    <view class='list_right'>
      <input type="number" placeholder="请输入手机号码 （必填）" class="inp-holder" maxlength="11" bindinput="getMobile" value='{{mobile}}'/>
    </view>
  </view> 

  <view class='list'>
    <view class='list_left'>地址:</view>
    <view class='list_right'>
      <input type="text" bindinput="getAddress" placeholder="请输入地址" class="inp-holder" value='{{address}}'/>
    </view>
  </view>

  <view class='list'>
    <view class='list_left'>邮箱:</view>
    <view class='list_right'>
      <input type="text" bindinput="getEmail" placeholder="请输入email" class="inp-holder" value='{{email}}'/>
    </view>
  </view>

  <view class='bottom'>
    <view class='btn' bindtap='btn'>立即保存</view>
  </view>
</view>